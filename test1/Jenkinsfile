pipeline {
    agent any
    }

    stages {
        stage('Build Image') {
            steps {
                sh 'docker build -t mysql-$ENV_NAME -f ./images/mysql-latest/dockerfile .'
            }
        }
        stage('Run Container') {
            steps {
                sh 'docker run -p $MYSQL_PORT:$MYSQL_PORT -e MYSQL_ROOT_PASSWORD=$MYSQL_PASSWORD --name mysql-$ENV_NAME-container mysql-$ENV_NAME'
            }
        }
        stage('Prepare Environment') {
            steps {
                sh 'docker exec mysql-$ENV_NAME-container mysql
